<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_profile"/>

    <Button
        android:id="@+id/bLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="@string/log_out" />


    <Button
        android:id="@+id/bUploadProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfile"
        android:layout_toStartOf="@+id/bLogOut"
        android:text="Upload Profile Photo" />

    <Button
        android:id="@+id/bTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfile"
        android:text="Take Photo" />


    <RelativeLayout
        android:id="@+id/svInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bUploadProfileImage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:text="Name" />

        <TextView
            android:id="@+id/tvSkills"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:background="@android:color/transparent"
            android:text="Skills" />

        <TextView
            android:id="@+id/tvJob"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSkills"
            android:background="@android:color/transparent"
            android:text="Job" />

        <TextView
            android:id="@+id/tvSummary"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvJob"
            android:background="@android:color/transparent"
            android:text="Summary" />

        <TextView
            android:id="@+id/tvEdu"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSummary"
            android:background="@android:color/transparent"
            android:text="Education" />

        <Button
            android:id="@+id/bSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etEdu"
            android:text="Save Profile" />

        <Button
            android:id="@+id/bEdit"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@android:color/background_dark"
            android:text="Edit" />

        <TextView
            android:id="@+id/tvFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bSave"
            android:layout_marginTop="10dp"
            android:text="Favorite Mentors"
            android:textSize="25sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvFavorites"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/svInfo" />


</RelativeLayout>