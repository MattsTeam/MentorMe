<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="550dp"
    android:minHeight="400dp">

    <TextView
        android:id="@+id/tvSelectTime"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:text="New Event" />

    <TimePicker
        android:id="@+id/simpleTimePicker"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSelectTime"
        android:layout_centerHorizontal="true"
        android:timePickerMode="spinner" />

    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/simpleTimePicker"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="33dp"
        android:clickable="true"
        android:text="Start Time"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvEndTime"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/simpleTimePicker"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="165dp"
        android:clickable="true"
        android:text="End Time"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editDetails"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/findMentor"
        android:layout_marginTop="15dp"
        android:hint="Event Description"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editDetails"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/round_login_button"
        android:text="Add Event" />

    <Spinner
        android:id="@+id/findMentor"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_below="@+id/simpleTimePicker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

</RelativeLayout>